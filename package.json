{
  "name": "userapi-sls-ts",
  "version": "1.0.0",
  "description": "Simple user API using Serverless & TypeScript",
  "main": "handler.js",
  "scripts": {
    "test": "jest --verbose",
    "devstart": "SLS_DEBUG=* sls offline start",
    "lint": "tslint --fix src/**/*",
    "clean": "rm -rf dist/"
  },
  "devDependencies": {
    "@types/aws-lambda": "0.0.22",
    "@types/jest": "^22.2.0",
    "@types/node": "^8.0.57",
    "jest": "^22.4.2",
    "serverless-offline": "^3.18.0",
    "serverless-webpack": "^4.0.0",
    "ts-jest": "^22.4.2",
    "ts-loader": "^2.3.7",
    "tslint": "^5.9.1",
    "typescript": "^2.5.2",
    "webpack": "^3.6.0"
  },
  "author": "Byeong Gyu Choi (https://github.com/gyukebox/userapi-sls-ts)",
  "license": "MIT",
  "dependencies": {
    "@types/uuid": "^3.4.3",
    "aws-sdk": "^2.207.0",
    "uuid": "^3.2.1"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx"
    ]
  }
}